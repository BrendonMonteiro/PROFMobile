        var seletor = document.getElementById("seletor");
        var tipoConteudo = document.getElementById("tipoConteudo");
        var textoDiv = document.getElementById("texto");

        seletor.addEventListener("change", function() {
            var opcaoSelecionada = this.value;
            var tipoSelecionado = tipoConteudo.value;
            var texto = scripts[opcaoSelecionada][tipoSelecionado];
            adicionarTexto(texto);
        });

        tipoConteudo.addEventListener("change", function() {
            var opcaoSelecionada = seletor.value;
            var tipoSelecionado = this.value;
            var texto = scripts[opcaoSelecionada][tipoSelecionado];
            adicionarTexto(texto);
        });

        document.getElementById('ok-button').addEventListener('click', function() {
            document.getElementById('welcome-card').style.display = 'none';
        });

        function adicionarLink(link, titulo) {
            return "<a href='" + link + "' target='_blank'>" + (titulo ? titulo : link) + "</a>";
        }

        function updateTime() {
            var now = new Date();
            var hours = now.getHours();
            var minutes = now.getMinutes();
            var seconds = now.getSeconds();

            hours = ("0" + hours).slice(-2);
            minutes = ("0" + minutes).slice(-2);
            seconds = ("0" + seconds).slice(-2);

            document.getElementById('clock').textContent = hours + ":" + minutes + ":" + seconds;

            setTimeout(updateTime, 1000);
        }

        window.onload = updateTime;

        function adicionarTexto(texto) {
            var html = "";
            texto.forEach(function(item) {
                if (item.texto) {
                    if (item.noCopy) {
                        html += "<div class='linha-texto'><span class='texto-principal'>" + item.texto + "</span><div class='descricao'>" + (item.descricao ? item.descricao : "") + "</div></div>";
                    } else {
                        html += "<div class='linha-texto'><span class='texto-principal'>" + item.texto + "</span><button class='botao-copiar' onclick='copiarTexto(this)'>Copiar</button><div class='descricao'>" + (item.descricao ? item.descricao : "") + "</div></div>";
                    }
                } else if (item.link) {
                    html += "<div class='linha-texto'>" + adicionarLink(item.link, item.titulo) + "</div>";
                }
            });
            textoDiv.innerHTML = html;
        }

        function copiarTexto(botao) {
            var texto = botao.previousElementSibling.textContent;
            navigator.clipboard.writeText(texto)
                .then(function() {
                    botao.innerHTML = "Copiado!";
                    setTimeout(function() {
                        botao.innerHTML = "Copiar";
                    }, 1000);
                })
                .catch(function(error) {
                    console.error('Erro ao copiar texto:', error);
                });
        }
    </script>
</body>
</html>
